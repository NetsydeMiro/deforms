  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "intern": "^4.1.4",
    "systemjs": "^0.20.19",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "lodash": "^4.17.19",
    "reflect-metadata": "^0.1.10"
  }
}
